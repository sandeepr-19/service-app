    title service_app   
 
body.w-100
  include ../components/sidebar.pug
  // header
  .d-flex.py-auto.float-end.h-100#page
    form#check-form.w-25.mx-auto.was-validated(action='check_in', method='post', target='hid')
      .mb-3.mt-3
        input#customer_name.form-control(placeholder='Enter customer name', name='customer_name', required='')
      |       
      .mb-3.mt-3
        input#mobile_no.form-control(placeholder='Enter mobile number', name='mobile_no', required='')
      |       
      .mb-3.mt-3 
        label.form-label(for="product") choose the product:
        input.form-control#product(list="products" name="product" )
        datalist#products(name="products")
          each val in list
            option(value=val["product_id"] name="productd") #{val["name"]} #{val["price"]} #{val["stock"]}
              
            
      button#form-submit.btn.btn-primary.mx-auto(type='submit') Submit
